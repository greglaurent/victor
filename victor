#!/usr/bin/env bash

# set HERE to bootstrap to call utils from anywhere
HERE=$(cd $(dirname "${BASH_SOURCE[0]}") &>/dev/null && pwd)

[[ ! -f "${HERE}"/utils ]] &&
  HERE="$(dirname "$(readlink -f "${0}")")"

source "${HERE}"/utils >&2

main() {
  utils::bootstrap

  # TODO: PRINT HELP TEXT

  [[ ! -z ${@} ]] && utils::exec "${@}"
}

main "${@}"
